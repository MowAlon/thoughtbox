<h1 class='text-center'>Your Links</h1>

<div>
  <h2>Add a new link</h2>
  <%= form_for(:link, url: links_path) do |f| %>
    <%= f.text_field :title, placeholder: 'Title', class: 'form-control' %>
    <%= f.text_field :url, placeholder: 'URL', class: 'form-control' %>
    <%= f.hidden_field :user_id, value: @user_id %>
    <%= f.submit 'Add to your list', class: 'btn btn-primary' %>
  <% end %>
</div>

<div>
  <% @links.each do |link| %>
    <hr>
    <div id=<%= "link-#{link.id}" %>>
      <h2>Link #<%= link.id %>: <%= link.title %> <%= link_to "Edit", edit_link_path(link), class: 'btn btn-success' %></h2>
      <!-- <h3><%#= link_to link.url %> <%#= link_to link.read_button[:label], link_path(id: link.id, update_what: :read_status), method: :patch, class: "btn #{link.read_button[:class]}" %></h3> -->
      <h3><%= link_to link.url %> <button class="btn <%= link.read_button[:class] %> read-button"><%= link.read_button[:label] %></button></h3>
    </div>
  <% end %>
</div>
